{
  "name": "scholar's-opus",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run build:pmo-assets && vite",
    "build:pmo-assets": "node --import ./scripts/register-ts-node.mjs ./scripts/build-pmo-assets.ts",
    "build": "npm run build:pmo-assets && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "validate:data": "node --import ./scripts/register-ts-node.mjs ./scripts/validate-projects.ts",
    "pmo:validate": "node --import ./scripts/register-ts-node.mjs ./scripts/validate-pmo.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.91.0",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8.4.49",
    "supabase": "^2.72.8",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^6.2.0",
    "vitest": "^2.1.8"
  }
